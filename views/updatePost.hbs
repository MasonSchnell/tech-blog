<h1 class="text-center">The MotherMessageBoard</h1>
<section class="column align-center post-output">

    <div class="post">
        <h1 class="text-center title">{{post.dataValues.title}}</h1>
        <h3 class="text-center">{{post.dataValues.text}}</h3>

        <form
            class="input-form"
            action="/updatePost/{{post.dataValues.id}}"
            method="POST"
        >
            <h4 class="text-center">Updated Title</h4>
            <div class="row justify-between">

                <textarea
                    id="comments"
                    name="titleUpdate"
                    rows="4"
                    cols="50"
                >{{post.dataValues.title}}</textarea>
            </div>
            <h4 class="text-center">Updated Text</h4>
            <div class="row justify-between">
                <textarea
                    id="comments"
                    name="textUpdate"
                    rows="4"
                    cols="50"
                >{{post.dataValues.text}}</textarea>
            </div>

            <button>Submit</button>

        </form>
    </div>
</section>